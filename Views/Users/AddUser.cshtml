                <section class="section main-section">
                    <div class="card has-table">
                        <header class="card-header">
                            <p class="card-header-title">
                                <span class="icon"><i class="mdi mdi-account-multiple"></i></span>
                                @LocalizationManager.GetString("Users Data")
                            </p>
                            <a href="#" class="card-header-icon" onclick="reloadPage()>
                                <span class="icon"><i class="mdi mdi-reload"></i></span>
                            </a>
                        </header>
                        <div class="container">
                            <form id="createUserForm">
                                <div class="row">
                                    <!-- First Row -->
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="Username">@LocalizationManager.GetString("Username"):</label>
                                            <input type="text" class="form-control" name="Username" id="Username" required />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="NameArabic"> @LocalizationManager.GetString("NameArabic"):</label>
                                            <input type="text" class="form-control" name="NameArabic" id="NameArabic" required />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="NameEnglish">@LocalizationManager.GetString("NameEnglish"):</label>
                                            <input type="text" class="form-control" name="NameEnglish" id="NameEnglish" required />
                                        </div>
                                    </div>
                                </div>
                                <!-- End of First Row -->
                                <!-- Second Row -->
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="Password">@LocalizationManager.GetString("Password"):</label>
                                            <input type="password" class="form-control" name="Password" id="Password" required />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="Groupid">@LocalizationManager.GetString("Group") ID:</label>
                                            <input type="number" class="form-control" name="Groupid" id="Groupid" required />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="LastLoginDate">@LocalizationManager.GetString("Last Login Date"):</label>
                                            <input type="date" class="form-control" name="LastLoginDate" id="LastLoginDate" required />
                                        </div>
                                    </div>
                                </div>
                                <!-- End of Second Row -->
                                <!-- Third Row -->
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="LastChangePassword">@LocalizationManager.GetString("Last Change Password"):</label>
                                            <input type="date" class="form-control" name="LastChangePassword" id="LastChangePassword" required />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>@LocalizationManager.GetString("Is Active")</label><br />
                                            <input type="radio" name="IsActive" value="true" required />@LocalizationManager.GetString("Active")<br />
                                            <input type="radio" name="IsActive" value="false" required />@LocalizationManager.GetString("Not Active")
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">@LocalizationManager.GetString("Create User")</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </section>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function reloadPage() {
        window.location.reload(); 
    }
</script>
    <script>
        $(document).ready(function () {
            $('#createUserForm').on('submit', function (e) {
                e.preventDefault();

                var formDataObj = {
                    Username: $("#Username").val(),
                    NameArabic: $("#NameArabic").val(),
                    NameEnglish: $("#NameEnglish").val(),
                    Password: $("#Password").val(),
                    Groupid: $("#Groupid").val(),
                    LastLoginDate: $("#LastLoginDate").val(),
                    LastChangePassword: $("#LastChangePassword").val(),
                    IsActive: $("input[name='IsActive']:checked").val() === "true"
                };

                var formData = JSON.stringify(formDataObj);

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("CreateUser", "Users")",
                    data: formData,
                    contentType: "application/json",
                    success: function (response) {
                        if (response.status === "success") {
                            window.location.href = "@Url.Action("Index", "Users")"; // Redirect on success
                        } else {
                            alert(response.message || "Error creating user. Please try again.");
                        }
                    },
                    error: function () {
                        alert("An error occurred. Please try again.");
                    }
                });
            });
        });
    </script>







